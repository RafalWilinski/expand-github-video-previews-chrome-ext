{
  "manifest_version": 3,
  "name": "GitHub PR Video Previews",
  "version": "1.0.1",
  "description": "Renders inline video previews for .mp4/.mov links on GitHub Pull Request pages.",
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["https://github.com/*"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/pull/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
